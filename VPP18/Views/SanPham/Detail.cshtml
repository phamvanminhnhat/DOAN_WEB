@model VPP18.Models.SANPHAM

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center card card-body">
    <section>
        <div>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/HomeAD/ListSanPham">SẢN PHẨM</a></li>
                <li class="breadcrumb-item"><a href="#">@Model.IdSP</a></li>
            </ol>
        </div>
    </section>

    <!-- ========================= SECTION CONTENT ========================= -->
    <section class="section-content bg-white padding-y">
        <div class="container">

            <!-- ============================ ITEM DETAIL ======================== -->
            <div style="text-align:center" class="row">
                <aside class="col-md-6">
                    <div class="card">
                        <article class="gallery-wrap">
                            <div class="img-big-wrap">
                                <div> <a href="#"><img src="~/Content/imgaes/@Model.HinhAnh"></a></div>
                            </div> <!-- slider-product.// -->
                            
                        </article> <!-- gallery-wrap .end// -->
                    </div> <!-- card.// -->
                </aside>
                <main class="col-md-6">
                    <article class="product-info-aside">

                        <h2 class="title mt-3">@Model.IdSP - @Model.TenSP </h2>

                        <div class="rating-wrap my-3">
                            <ul class="rating-stars">
                                <li style="width:80%" class="stars-active">
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                    <i class="fa fa-star"></i>
                                </li>

                            </ul>

                        </div> <!-- rating-wrap.// -->

                        <div class="mb-3">
                            <var class="price h4">@Model.DonGia</var>

                        </div> <!-- price-detail-wrap .// -->

                        <p>
                            @Model.MoTa
                        </p>




                        <div class="form-row  mt-4">
                            <div class="form-group col-md flex-grow-0">
                                <div class="input-group mb-3 input-spinner">


                                </div>
                            </div> <!-- col.// -->
                            <!-- col.// -->
                        </div> <!-- row.// -->

                    </article> <!-- product-info-aside .// -->
                </main> <!-- col.// -->
            </div> <!-- row.// -->
            <!-- ================ ITEM DETAIL END .// ================= -->


        </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->
    <!-- ========================= SECTION  ========================= -->
    <section class="section-name padding-y bg">
        <div class="container">

            <div>
                <button class="btn btn-default">
                    @Html.ActionLink("BACK", "GioHang","GioHang")
                </button>
                


            </div> <!-- row.// -->

        </div> <!-- container .//  -->
    </section>
    <!-- ========================= SECTION CONTENT END// ========================= -->
    <!-- ========================= SECTION SUBSCRIBE  ========================= -->
    <!-- ========================= SECTION SUBSCRIBE END// ========================= -->

</div>

