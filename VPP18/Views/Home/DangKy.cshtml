@model VPP18.Models.NGUOIDUNG

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("DangKy", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div style="text-align:center;font-weight:600" class="card-header">
                ĐĂNG KÍ TÀI KHOẢN
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body">
                <div class="form-group">
                    <label class="col-md-10">
                        Họ và tên:
                    </label>
                    <div>
                        @Html.EditorFor(model => model.TenND, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenND, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-10">
                        Số điện thoại:
                    </label>
                    <div>
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-10">
                        Địa chỉ:
                    </label>
                    <div>
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-10">
                        Email:
                    </label>
                    <div>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-10">
                        Mật khẩu:
                    </label>
                    <div>
                        
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @placeholder = "Nhập mật khẩu" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-10">
                        Nhập lại mật khẩu:
                    </label>
                    <div>
                        <input class="form-control  text-box single-line input-validation-error"
                               data-val="true" data-val-required="Phải nhập mật khẩu xác nhận!"
                               id="MatKhauXacNhan" name="MatKhauXacNhan" type="password" value="" aria-
                               describedby="MatKhauXacNhan-error" aria-invalid="true">

                        @ViewData["NhapMKXN"]
                        @ViewData["MatKhauGiongNhau"]
                    </div>
                </div>

                <div style="text-align:center" class="form-group">
                    <button class="btn btn-primary ">
                        @Html.ActionLink("BACK", "Index")
                    </button>
                    <input type="submit" class="btn btn-default" value="ĐĂNG KÍ" />

                </div>
            </div>

        </div>
    </div>
</div>
}